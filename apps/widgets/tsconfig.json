{
  "extends": "@forge/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["node", "react", "react-dom"],
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "bundler"
  },
  "include": ["."],
  "exclude": ["node_modules"]
}